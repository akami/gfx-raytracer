<?xml version="1.0" standalone="no" ?>
<!DOCTYPE scene SYSTEM "scene.dtd">

<scene output_file="myImage.png">
    <background_color b="0" g="0" r="255"/>
    <camera>
        <position x="1.0" y="-2.0E-10" z="-3"/>
        <lookat x="1" y="2" z="3"/>
        <up x="1" y="2" z="3"/>
        <horizontal_fov angle="90"/>
        <resolution horizontal="1920" vertical="1080"/>
        <max_bounces n="100"/>
    </camera>
    <lights>
        <ambient_light>
            <color b="3" g="2" r="1"/>
        </ambient_light>
        <point_light>
            <color b="3" g="2" r="1"/>
            <position x="1" y="2" z="3"/>
        </point_light>
        <parallel_light>
            <color b="3" g="2" r="1"/>
            <direction x="1" y="2" z="3"/>
        </parallel_light>
        <spot_light>
            <color b="3" g="2" r="1"/>
            <position x="1" y="2" z="3"/>
            <direction x="1" y="2" z="3"/>
            <falloff alpha1="1" alpha2="3"/>
        </spot_light>
    </lights>
    <surfaces>
        <sphere radius="123">
            <position x="1" y="2" z="3"/>
            <material_solid>
                <color b="3" g="2" r="1"/>
                <phong exponent="1" ka="1" kd="1" ks="1"/>
                <reflectance r="1"/>
                <transmittance t="1"/>
                <refraction iof="1"/>
            </material_solid>
            <transform>
                <translate x="1" y="1" z="1"/>
                <scale x="1" y="1" z="1"/>
                <rotateX theta="1"/>
                <rotateY theta="1"/>
                <rotateZ theta="1"/>
            </transform>
        </sphere>
        <mesh name="duck.dae">
            <material_textured>
                <texture name=""/>
                <phong exponent="1" ka="1" kd="1" ks="1"/>
                <reflectance r="1"/>
                <transmittance t="1"/>
                <refraction iof="1"/>
            </material_textured>
            <transform>
                <translate x="1" y="1" z="1"/>
                <scale x="1" y="1" z="1"/>
                <rotateX theta="1"/>
                <rotateY theta="1"/>
                <rotateZ theta="1"/>
                <translate x="1" y="1" z="1"/>
                <scale x="1" y="1" z="1"/>
            </transform>
        </mesh>
    </surfaces>
</scene>